@{
}

<h1>Student List</h1>
<br />
<a class="btn btn-primary" asp-action="AddStudent">Add Student</a>
<br />
<br />


<table class="table">
    <tr class="table-primary">
        <td>Name</td>
        <td>Course</td>
        <td>Date Enrolled</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Show Details</td>
        <td>Update</td>


    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentFirstName @student.StudentLastName</td>
            <td>@student.StudentCourse</td>
            <td>@student.DateEnrolled</td>
            <td>@student.StudentEmail</td>
            <td>@student.GPA</td>
            <td><a class="btn btn-primary" asp-action="ShowDetails" asp-route-id="@student.StudentId">Show Details</a></td>
            <td><a class="btn btn-primary" asp-action="UpdateStudent" asp-route-id="@student.StudentId">Update</a></td>
        </tr>

    }

</table>