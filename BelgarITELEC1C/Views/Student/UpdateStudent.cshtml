@{
}
@model Student;

<h1>Update Student</h1>

<form asp-action="UpdateStudent" asp-controller="Student" method="post">


    <div class="form-group">
        <label asp-for="StudentId" hidden >Id</label>
        <input class="form-control" asp-for="StudentId" hidden>
    </div>

    <div class="form-group">
        <label asp-for="StudentFirstName">Name</label>
        <input class="form-control" asp-for="StudentFirstName" />
    </div>

    <div class="form-group">
        <label asp-for="StudentLastName">Name</label>
        <input class="form-control" asp-for="StudentLastName" />
    </div>

    <div class="form-group">
        <label asp-for="StudentCourse">Course</label>
        <select asp-for"StudentCourse" asp-items="@Html.GetEnumSelectList(typeof(StudentCourse))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StudentEmail">Email</label>
        <input class="form-control" asp-for="StudentEmail">
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input class="form-control" asp-for="DateEnrolled">
    </div>
    <br />
    <button type="submit" class="btn btn-success">Update</button>
    <button type="button" onclick="history.back()" class="btn btn-primary">Cancel</button>
</form>