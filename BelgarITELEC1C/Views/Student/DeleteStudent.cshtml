@{
}
@model Student;

<h1>Are you sure you want to delete?</h1>

<form asp-action="DeleteStudent" asp-controller="Student" method="post">


    <div class="form-group">
        <label asp-for="StudentId" hidden >Id</label>
        <input class="form-control" asp-for="StudentId" hidden>
    </div>

    <div class="form-group">
        <label asp-for="StudentFirstName">Name</label>
        <input class="form-control" asp-for="StudentFirstName" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="StudentLastName">Name</label>
        <input class="form-control" asp-for="StudentLastName" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="StudentCourse">Course</label>
        <select asp-for"StudentCourse" readonly asp-items="@Html.GetEnumSelectList(typeof(StudentCourse))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StudentEmail">Email</label>
        <input class="form-control" asp-for="StudentEmail" readonly>
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input class="form-control" asp-for="DateEnrolled" readonly>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-dark">Cancel</button>
</form>