@{
}
@model Student;

<h1>Create a new Student</h1>

<form asp-action="AddStudent" asp-controller="Student" method="post">

    
    <div class="form-group">
        <label asp-for="StudentId">Id</label>
        <input class="form-control" asp-for="StudentId">
    </div>

     <div class="form-group">
        <label asp-for="StudentFirstName">First Name</label>
        <input class="form-control" asp-for="StudentFirstName" />
    </div>

    <div class="form-group">
        <label asp-for="StudentLastName">Last Name</label>
        <input class="form-control" asp-for="StudentLastName" />
    </div>

    <div class="form-group">
        <label asp-for="StudentCourse">Course</label>
        <select asp-for"StudentCourse" asp-items="@Html.GetEnumSelectList(typeof(StudentCourse))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StudentEmail">Email</label>
        <input class="form-control" asp-for="StudentEmail">
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input class="form-control" asp-for="DateEnrolled">
    </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
</form>