@{
}
@model Instructor;

<h1>Update Instructor</h1>

    <form asp-action="UpdateInstructor" asp-controller="Instructor" method="post">


    <div class="form-group">
        <label asp-for="InstructorId" hidden>Id</label>
        <input class="form-control" asp-for="InstructorId" hidden>
    </div>

    <div class="form-group">
        <label asp-for="InstructorFirstName">First Name</label>
        <input class="form-control" asp-for="InstructorFirstName" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorLastName">Last Name</label>
        <input class="form-control" asp-for="InstructorLastName" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorEmail">Instructor Email</label>
        <input class="form-control" asp-for="InstructorEmail" />
    </div>

    <div class="form-group">
        <label asp-for= "IsTenured">Is Tenured</label>
        <select asp-for= "IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DateHired">Date Hired</label>
        <input class="form-control" asp-for="DateHired">
    </div>

    <div class="form-group">
        <label asp-for= "Rank">Rank</label>
        <select asp-for= "Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>


    <br />
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-primary">Cancel</button>

</form>
