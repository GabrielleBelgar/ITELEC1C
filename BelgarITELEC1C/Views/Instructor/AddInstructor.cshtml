@model Instructor;

<form asp-action="AddInstructor" asp-controller="Instructor" method="post">


    <div class="form-group">
        <label asp-for="InstructorId">Id</label>
        <input class="form-control" asp-for="InstructorId">
    </div>

    <div class="form-group">
        <label asp-for="InstructorName">Name</label>
        <input class="form-control" asp-for="InstructorName" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorEmail">Instructor Email</label>
        <input class="form-control" asp-for="InstructorEmail" />
    </div>

    <div class="form-group">
        <label asp-for= "IsTenured">Is Tenured</label>
        <select asp-for= "IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DateHired">Date Hired</label>
        <input class="form-control" asp-for="DateHired">
    </div>

    <div class="form-group">
        <label asp-for= "Rank">Rank</label>
        <select asp-for= "Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>


    <br />
    <button type="submit" class="btn btn-success">Submit</button>
</form>@*
