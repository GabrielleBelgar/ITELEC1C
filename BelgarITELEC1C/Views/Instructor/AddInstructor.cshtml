@model Instructor;

<h1>Create a new Instructor</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddInstructor" asp-controller="Instructor" method="post" enctype="multipart/form-data">



    <div class="form-group">
        <label asp-for="InstructorFirstName"></label>
        <input class="form-control" asp-for="InstructorFirstName" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorLastName"></label>
        <input class="form-control" asp-for="InstructorLastName" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorProfilePhoto"></label>
        <input class="form-control" type="file" name="Instructor Profile Photo" asp-for="InstructorProfilePhoto">
    </div>

    <div class="form-group">
        <label asp-for="InstructorEmail"></label>
        <input class="form-control" asp-for="InstructorEmail" />
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
    </div>

    <div class="form-group">
        <label asp-for= "IsTenured"></label>
        <select asp-for= "IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DateHired"></label>
        <input class="form-control" asp-for="DateHired">
    </div>

    <div class="form-group">
        <label asp-for= "Rank"></label>
        <select asp-for= "Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>


    <br />
    <button type="submit" class="btn btn-success">Submit</button>
</form>@*
