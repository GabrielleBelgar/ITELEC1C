@model IEnumerable<BelgarITELEC1C.Models.Instructor>


<h1>Instructor List</h1>
<br />
<a class="btn btn-primary" asp-action="AddInstructor">Add Instructor</a>
<br />
<br />

<table class="table">
    <tr class="table-primary">
        <td>Name</td>
        <td>Date Hired</td>
        <td>Email</td>
        <td>Rank</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>
        
    </tr>

    @foreach(var instructor in Model)
    {
        <tr>
        <td>@instructor.InstructorFirstName @instructor.InstructorLastName</td>
        <td>@instructor.DateHired</td>
        <td>@instructor.InstructorEmail</td>
        <td>@instructor.Rank</td>
        <td><a class="btn btn-primary" asp-action="ShowDetails" asp-route-id="@instructor.InstructorId">Show Details</a></td>
        <td><a class="btn btn-primary" asp-action="UpdateInstructor" asp-route-id="@instructor.InstructorId">Update</a></td>
        <td><a class="btn btn-danger" asp-action="DeleteInstructor" asp-route-id="@instructor.InstructorId">Delete</a></td>

        </tr>

    }

</table>